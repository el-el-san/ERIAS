# ERIASの環境設定ファイル
# .env.example を .env にコピーして使用してください

# ===== 一般設定 =====
# アプリケーション環境（development または production）
NODE_ENV=development

# ログレベル（debug, info, warn, error）
LOG_LEVEL=info

# ログファイルのパス
LOG_FILE=./logs/erias.log

# ===== Discord設定 =====
# Discordボットトークン（Discord Developer Portalから取得）
DISCORD_TOKEN=your_discord_bot_token

# DiscordクライアントID
DISCORD_CLIENT_ID=your_discord_client_id

# 許可するサーバー（ギルド）ID（カンマ区切り）
ALLOWED_GUILD_IDS=guild_id1,guild_id2

# 許可するユーザーID（カンマ区切り）
ALLOWED_USER_IDS=user_id1,user_id2

# Discordの有効化（true/false）
ENABLE_DISCORD=true

# ===== Slack設定 =====
# SlackボットトークンとアプリトークンはSlack API管理画面から取得
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_APP_TOKEN=xapp-your-slack-app-token

# Slackアプリのポート番号
SLACK_PORT=3000

# 許可するSlackチャンネルID（カンマ区切り）
SLACK_ALLOWED_CHANNEL_IDS=channel_id1,channel_id2

# Slackの有効化（true/false）
ENABLE_SLACK=false

# ===== GitHub設定 =====
# GitHubパーソナルアクセストークン（オプション）
GITHUB_TOKEN=your_github_token

# ===== Google Gemini API設定 =====
# Google Gemini APIキー
GOOGLE_API_KEY=your_google_api_key

# デフォルトのGeminiモデル
DEFAULT_MODEL=gemini-2.5-flash-preview-04-17

# ===== タスク実行設定 =====
# 最大実行時間（ミリ秒）
MAX_EXECUTION_TIME=3600000

# デバッグ時の最大リトライ回数
MAX_DEBUG_RETRIES=5

# プロジェクト保存ディレクトリ
PROJECTS_DIR=./projects

# プロジェクト生成時の待機秒数（未設定時は30秒）
WAIT_SECONDS=30

